        main
            .main__box 
                .content
                    h1.title Новая коллекция
                    .border
                    a.subtitle(href="#") Смотреть Новинки
        section.categories
            .categories__container.container 
                h2.title Категории
                .photo__box 
                    a.box__item.item-1(href="#")  
